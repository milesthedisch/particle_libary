{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "settings": {
        "import/extensions": [".test.js", ".js"]
    },
    "extends": [
        "./node_modules/eslint-config-google/index.js",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": [
        "import",
        "flowtype"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "import/no-unresolved": [
            2, 
            {
                "commonjs": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
